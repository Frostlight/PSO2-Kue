<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:baselineAligned="false">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_weight="8"
        android:gravity="center_vertical"
        android:background="@color/color_primary"
        android:visibility="gone"
        android:id="@+id/list_layout_sectionheader">
        <TextView
            style="@style/list_item_textview_scale"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/default_eq_day"
            android:id="@+id/list_item_eq_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:baselineAligned="false">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_weight="8"
            android:gravity="center_vertical">
            <!-- Static size width here to maintain position -->
            <TextView
                style="@style/list_item_textview_scale"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/default_eq_name"
                android:id="@+id/list_item_eq_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingEnd="15dp"
            android:paddingRight="15dp"
            android:layout_weight="5"
            android:gravity="end"
            tools:ignore="RtlSymmetry">
            <TextView
                style="@style/list_item_textview"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:gravity="start"
                android:text="@string/default_eq_time"
                android:id="@+id/list_item_eq_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>